<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="#">Admin</a></li>
    <li><a href="#">Pdr Bot</a></li>
    <li class="is-active"><a href="#" aria-current="page">Send message</a></li>
  </ul>
</nav>

<form method="post" action="/admin/pdr_bot/messages">
  <div class="field">
    <label class="label">Message</label>
    <div class="control">
      <textarea name="message" class="textarea" placeholder="Enter your message text here"></textarea>
    </div>
  </div>

  <div class="field">
    <label class="label">Bot</label>
    <div class="control">
      <input class="input" type="text" placeholder="Pdr Bot" disabled style="width: 300px">
    </div>
  </div>

  <div class="field">
    <label class="label">Chat</label>
    <div class="control">
      <div class="select">
        <select name="chat_id">
          <% @chats.each do |chat| %>
            <option value="<%= chat.id %>" <% if chat.id == params[:chat_id].to_i %> selected <% end %>><%= chat.title ? chat.title : "#{chat.first_name} #{chat.last_name}" %></option>
          <% end %>
        </select>
      </div>
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <button type="submit" class="button is-link">Send</button>
    </div>
  </div>
</form>
